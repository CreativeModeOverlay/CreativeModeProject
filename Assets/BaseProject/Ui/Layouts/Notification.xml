<Panel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../XmlUiSchema.xsd" 
       FlexDirection="Row" Padding="8" MinWidth="256" Color="#444444" Sprite="Backgrounds/Round48px" MarginTop="8">
    
    <Panel Width="32" Height="32" Sprite="Backgrounds/Round32px" Color="#222222">
        <Panel.Mask />
        <Image Id="Icon" Margin="4" FlexGrow="1" Sprite="Icons/checkIcon" />
    </Panel>
    
    <Panel AlignSelf="Center" MarginStart="8" >
        <Text Id="Title" Text="Title" />
        <Text Id="Subtitle" Text="Subtitle" />
    </Panel>
    
</Panel>